<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

        <EditText
            android:id="@+id/goalNameInput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="e.g., Vacation Fund"
            android:inputType="text"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target Amount"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

        <EditText
            android:id="@+id/goalTargetAmountInput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="0.00"
            android:inputType="numberDecimal"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target Date"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

        <EditText
            android:id="@+id/goalTargetDateInput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="YYYY-MM-DD"
            android:inputType="date"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Contribution (Optional)"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

        <EditText
            android:id="@+id/goalMonthlyInput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="0.00"
            android:inputType="numberDecimal"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category (Optional)"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

        <EditText
            android:id="@+id/goalCategoryInput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="e.g., Travel, Emergency"
            android:inputType="text"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes (Optional)"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

        <EditText
            android:id="@+id/goalNotesInput"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Additional details"
            android:inputType="textMultiLine"
            android:gravity="top" />
    </LinearLayout>
</ScrollView>
