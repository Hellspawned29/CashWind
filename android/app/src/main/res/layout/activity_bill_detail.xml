<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/billName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bill Name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/billAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textSize="20sp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/billStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unpaid"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/billDue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Due: 2025-01-01"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/billCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category: General"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/billRecurrence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="One-time"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/billNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="16dp" />

        <!-- Web Link -->
        <LinearLayout
            android:id="@+id/webLinkSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ Web Link"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/billWebLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="https://example.com"
                android:textColor="@color/purple_500"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/openLinkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open Payment Page"
                android:backgroundTint="@android:color/holo_blue_light"
                android:textColor="?android:attr/textColorPrimaryInverse" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”” Reminder"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/reminderEnabledCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable reminder"
                android:textColor="?android:attr/textColorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remind me"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginEnd="8dp" />

                <Spinner
                    android:id="@+id/reminderDaysSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/reminder_days"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="days before"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorPrimary" />
            </LinearLayout>

            <Button
                android:id="@+id/saveReminderButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Reminder"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/closeButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Close"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/editButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Edit"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/togglePaidButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Mark Paid"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Delete"
                android:layout_marginEnd="8dp"
                android:background="?attr/colorDanger" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
