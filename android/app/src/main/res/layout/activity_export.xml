<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Export/Import Data"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:gravity="center"
            android:layout_marginStart="8dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export Data:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/exportBillsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export Bills"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/exportAccountsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export Accounts"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/exportTransactionsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export Transactions"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/exportBudgetsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export Budgets"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/exportGoalsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export Goals"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/exportPaycheckButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export Paycheck Settings"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/exportAllButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export All Data"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Import Data:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/importBillsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Import Bills from CSV"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/importAccountsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Import Accounts from CSV"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/importTransactionsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Import Transactions from CSV"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/importBudgetsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Import Budgets from CSV"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/importGoalsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Import Goals from CSV"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/importPaycheckButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Import Paycheck Settings from CSV"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exported files can be shared via email, cloud storage, or other apps. Import will add data from CSV files."
        android:textSize="12sp"
        android:textColor="?attr/colorTextSecondary"
        android:layout_marginTop="8dp" />

</LinearLayout>
</ScrollView>
