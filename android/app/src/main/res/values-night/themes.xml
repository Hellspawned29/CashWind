<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Cashwind" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary_darker</item>
        <item name="colorAccent">@color/accent_dark</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="colorTextSecondary">@color/text_secondary_dark</item>
        <item name="colorAccentText">@color/accent_dark</item>
        <item name="colorDanger">#FF6B4C4C</item>
        <item name="colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
    </style>

    <!-- Dark mode colors -->
    <color name="primary_dark">#81C784</color>
    <color name="primary_darker">#66BB6A</color>
    <color name="accent_dark">#FFB74D</color>
    <color name="background_dark">#121212</color>
    <color name="surface_dark">#1E1E1E</color>
    <color name="card_dark">#2C2C2C</color>
    <color name="text_primary_dark">#FFFFFF</color>
    <color name="text_secondary_dark">#B3B3B3</color>
    <color name="divider_dark">#3A3A3A</color>
    
    <!-- Splash theme for dark mode -->
    <style name="Theme.App.Starting" parent="android:Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>
</resources>
